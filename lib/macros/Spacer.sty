\pgfkeys{
	/newsletter/Spacer/.cd,
	height/.store in=\newsletter@Spacer@height,
	height/.default={\nlmargin}, height,
}



\tikzset{
	spacer hatch/.style={
		inner sep=0,
		outer sep=0,
		pattern={%
			Lines[%
			distance=6mm,
			angle=45,
			line width=2mm%
			]%
		},
		pattern color=pink,
	},
	spacer empty/.style={
		inner sep=0,
		outer sep=0,
		fill=none,
	}
}



\newcommand{\Spacer}[1][]{%
	\pgfkeys{/newsletter/Spacer/.cd,#1}%
	\ifnldevelopment
		\tikz\fill[spacer hatch] (0,0) rectangle (\linewidth,\newsletter@Spacer@height);
	\else
		\tikz\fill[fill=none] (0,0) rectangle (\linewidth,\newsletter@Spacer@height);
	\fi
}