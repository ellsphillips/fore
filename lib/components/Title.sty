\pgfkeys{
	/newsletter/Title/.cd,
	alignment/.store in=\newsletter@Title@alignment,
	alignment/.default=\raggedright, alignment,
	after skip/.store in=\newsletter@Title@afterSkip,
	after skip/.default=\nlmargin, after skip,
	ref/.store in=\newsletter@Title@ref,
	ref/.default={foreword}, ref,
}



\newcommand{\Title}[2][]{%
	\tikzset{/newsletter/Title/.cd,#1}%
	\vskip-1.25\baselineskip%
	\raisebox{2.6\ht\strutbox}{\hypertarget{\newsletter@Title@ref}{}}%
	\parbox{\linewidth}{%
		\fontsize{50pt}{32pt}\selectfont%
		\color{main-bg}\bfseries%
		\newsletter@Title@alignment%
		\MakeUppercase{#2}%
	}%
	\vskip\newsletter@Title@afterSkip%
}
