\tikzset{
	/newsletter/message/.cd,
	image/.store in = \messageImage,
	image width/.store in = \messageImageWidth,
	content/.store in = \messageContent,
	content width/.store in = \messageContentWidth,
}



\newcommand{\MessageContainer}[1]{#1}%
\newcommand{\Message}[1]{%
	\tikzset{/newsletter/message/.cd,#1}%
	\renewcommand{\MessageContainer}{%
		\parbox{\messageContentWidth}{%
			\begin{wrapfigure}{l}{\imagewidth}%
				\Rounded{%
					\includegraphics[width=\messageImageWidth]{\messageImage}%
				}%
			\end{wrapfigure}
			\raggedright\itshape
			\messageContent
		}
	}
}