\pgfkeys{
	/newsletter/Spacer/.cd,
	height/.store in=\newsletter@Spacer@height,
	height/.default={\nlmargin}, height,
}



\newcommand{\Spacer}[1][]{%
	\pgfkeys{/newsletter/Spacer/.cd,#1}%
	\begin{tikzpicture}%
		\fill[%
			inner sep=0,
			outer sep=0,
			pattern={%
				Lines[%
					distance=6mm,
					angle=45,
					line width=2mm%
				]%
			},
			pattern color=pink%
		] (0,0) rectangle (\linewidth,\newsletter@Spacer@height);
	\end{tikzpicture}%
}