\newcommand{\calcThumbnailHeight}[1]{%
	\dimexpr(#1) * 9/16\relax%
}

\newcommand{\Thumbnail}[2]{%
	\href{https://www.github.com/ellsphillips/newsletter}{%
		\Rounded{
			\includegraphics[%
				clip,%
				trim = 0mm 0mm 0mm 0mm,%
				width = #1,
				height = \calcThumbnailHeight{#1},
			]{#2}%
		}
	}%
}



